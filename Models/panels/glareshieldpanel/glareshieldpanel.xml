    <animation>
        <type>pick</type>
        <object-name>stby</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>q400.FD_set_mode("stby")</script>
            </binding>
        </action>
    </animation>


    <animation>
        <type>pick</type>
        <object-name>ap</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>q400.FD_set_mode("ap");</script>
            </binding>
            <binding>
                <command>property-cycle</command>
                <property>it-autoflight/input/ap1</property>
		<value>1</value>
		<value>0</value>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>yd</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>q400.FD_set_mode("yd");</script>
            </binding>
        </action>
    </animation>

  <animation>
        <type>knob</type>
        <object-name>crsL</object-name>
        <object-name>crsR</object-name>
        <action>
                <binding>
                    <command>property-adjust</command>
<condition><equals>
                <property>/autopilot/settings/nav-source</property>
<value>NAV1</value>
</equals></condition>
                    <property>instrumentation/nav/radials/selected-deg</property>
                    <factor>-1</factor>
                    <min>0</min>
                    <max>360</max>
                    <wrap>1</wrap>
                </binding>
                <binding>
                    <command>property-adjust</command>
<condition><equals>
                <property>/autopilot/settings/nav-source</property>
<value>NAV2</value>
</equals></condition>
                    <property>instrumentation/nav[1]/radials/selected-deg</property>
                    <factor>-1</factor>
                    <min>0</min>
                    <max>360</max>
                    <wrap>1</wrap>
                </binding>
        </action>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>navsourceL</object-name>
        <object-name>navsourceR</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-cycle</command>
                <property>/autopilot/settings/nav-source</property>
		<value>NAV1</value>
		<value>NAV2</value>
            </binding>
        </action>
    </animation>
  <animation>
        <type>knob</type>
        <object-name>altknob</object-name>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>it-autoflight/input/alt</property>
                <factor>100</factor>
                <min>1000</min>
                <max>50000</max>                
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>altsel</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
                <binding>
                    <command>property-assign</command>
                    <property>it-autoflight/input/alt</property>
                    <property>position/altitude-ft</property>
                </binding>
        </action>
    </animation>
  <animation>
<type>slider</type>
        <object-name>Cylinder</object-name>
        <drag-direction>vertical</drag-direction>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>it-autoflight/input/vs</property>
                <factor>50</factor>
                <min>-5000</min>
                <max>5000</max>                
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>
  <animation>
        <type>knob</type>
        <object-name>hdgL</object-name>
        <object-name>hdgR</object-name>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>it-autoflight/input/hdg</property>
                <factor>1</factor>
                <min>0</min>
                <max>360</max>                
                <wrap>true</wrap>
            </binding>
        </action>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>hsisel</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
                <binding>
                    <command>property-assign</command>
                    <property>it-autoflight/input/hdg</property>
                    <property>/orientation/heading-magnetic-deg</property>
                </binding>
        </action>
    </animation>
</PropertyList>
