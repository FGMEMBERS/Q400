<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList>

    <path>glareshieldpanel.ac</path>

<!-- FD/AP -->


    <animation>
        <type>pick</type>
        <object-name>hdg</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>it-autoflight/input/lat</property>
                <value>0</value>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>alt</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>it-autoflight/input/vert</property>
                <value>0</value>
            </binding>
        </action>
    </animation>


    <animation>
        <type>pick</type>
        <object-name>nav</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>it-autoflight/input/lat</property>
                <value>1</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>it-autoflight/input/backcourse-trk</property>
                <value>0</value>
            </binding>
        </action>
    </animation>
