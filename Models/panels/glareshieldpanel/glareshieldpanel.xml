    <animation>
        <type>pick</type>
        <object-name>bc</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>it-autoflight/input/backcourse-trk</property>
                <value>1</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>it-autoflight/input/lat</property>
