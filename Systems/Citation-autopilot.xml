<!-- Speed Control  -->

    <pid-controller>
        <name>Speed Control</name>
        <debug>false</debug>
				<enable>
					<condition>
						<and>
							<or>
                <equals>
                    <property>autopilot/settings/nav-source</property>
                    <value>FMS1</value>
                </equals>
                <equals>
                    <property>autopilot/settings/nav-source</property>
                    <value>FMS2</value>
                </equals>
							</or>
							<equals>
									<property>/autopilot/locks/altitude</property>
										<value>VALT</value>
							</equals>
							<equals>
								<property>/autopilot/locks/AP-status</property>
									<value>AP</value>
							</equals>
						</and>
					</condition>
				</enable>
				<input>
					<prop>instrumentation/airspeed-indicator/indicated-speed-kt</prop>
				</input>
				<reference>
					<prop>autopilot/settings/target-speed-kt</prop>
				</reference>
				<output>
					<prop>controls/engines/engine[0]/throttle</prop>
					<prop>controls/engines/engine[1]/throttle</prop>		
				</output>
        <config>
            <Kp>0.1</Kp> <!-- old 0.1 -->
            <beta>1.0</beta>
            <alpha>0.1</alpha>
            <gamma>0.0</gamma>
            <Ti>10.0</Ti>	<!-- old 10.0 -->
            <Td>0.001</Td>
            <min>0.20</min> <!-- old 0.25 -->
            <max>0.99</max> <!-- old 0.95 -->
        </config>
    </pid-controller>

